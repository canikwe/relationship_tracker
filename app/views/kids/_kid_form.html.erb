<% if @kid.errors.any? %>
  <div id="error_explanation">
    <ul>
      <% @kid.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>

<% end %>

<div class="more-errors">

<%= form_for @kid do |f|%>
  <div class="errors">
    <%= f.label :name %>
    <%= f.text_field :name %><br>
  </div>

  <div class="errors">
    <%= f.label :age %>
    <%= f.number_field :age %><br>
  </div>

  <div class="errors">
    <%= f.label :hobby %>
    <%= f.text_field :hobby %><br>
  </div>

  <div class="errors">
    <%= f.label :adult %>
    <%= f.select :adult, {"Yes" => true, "No" => false} %><br>
  </div>

  <h3>Caretakers</h3>
  <%= f.fields_for :care_takers do |care| %>
    <%= care.label :name%>
    <%= care.text_field :name %><br>

    <%= care.label :age %>
    <%= care.number_field :age %><br>

    <%= care.label :job %>
    <%= care.text_field :job %><br>
  <% end %>

  <p><%= f.submit %></p>
  <% end %>
</div>
